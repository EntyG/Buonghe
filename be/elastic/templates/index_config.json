{
    "name": "metadata",
    "mappings": {
        "properties": {
            "id": {
                "type": "keyword"
            },
            "url": {
                "type": "text"
            },
            "date": {
                "type": "date",
                "format": "yyyy-MM-dd HH:mm:ss"
            },
            "time_in_seconds": {
                "type": "float"
            },
            "objects": {
                "type": "object"
            },
            "ocr": {
                "type": "text"
            },
            "subtitle": {
                "type": "text"
            }
        }
    },
    "settings": {
        "number_of_shards": 1,
        "number_of_replicas": 0,
        "index": {
            "max_result_window": 800000
        }
    }
}