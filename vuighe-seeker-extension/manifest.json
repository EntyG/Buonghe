{
  "manifest_version": 3,
  "name": "Vuighe Auto Seeker",
  "version": "1.1",
  "description": "Tự động tua video vuighe.cam",
  "permissions": [
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://vuighe.cam/*",
        "*://*.vuighe.cam/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}